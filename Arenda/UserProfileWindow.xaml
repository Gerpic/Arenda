<Window x:Class="Arenda.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Профиль"
        Width="800"
        Height="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB">
    <Grid>
        <Border Background="#FFFFFF" CornerRadius="8" Margin="20">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="Профиль"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1E90FF"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20" />

                <!-- Profile Details -->
                <Grid Grid.Row="1" Margin="0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Left Section -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Margin="0,10,20,0">
                        <!-- Full Name -->
                        <TextBlock Text="ФИО"
                                   FontSize="14"
                                   Foreground="#6B7280"
                                   Margin="5,0,0,5" />
                        <TextBox x:Name="FullNameTextBox"
                                 FontSize="16"
                                 Padding="10"
                                 BorderThickness="1"
                                 BorderBrush="#D1D5DB"
                                 Background="#F9FAFB"
                                 IsReadOnly="True" />

                        <!-- Phone Number -->
                        <TextBlock Text="Номер телефона"
                                   FontSize="14"
                                   Foreground="#6B7280"
                                   Margin="5,10,0,5" />
                        <TextBox x:Name="PhoneNumberTextBox"
                                 FontSize="16"
                                 Padding="10"
                                 BorderThickness="1"
                                 BorderBrush="#D1D5DB"
                                 Background="#F9FAFB"
                                 IsReadOnly="True" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                            <Button Content="Редактировать"
                                    Width="114"
                                    Height="30"
                                    Margin="0,0,10,0"
                                    Click="EditPhoneNumberButton_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="#1E90FF"
                                                CornerRadius="5"
                                                BorderBrush="#1E90FF"
                                                BorderThickness="0"
                                                Padding="5">
                                            <TextBlock Text="Редактировать"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontSize="14"
                                                       FontWeight="Bold" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Content="Сохранить"
                                    Width="114"
                                    Height="30"
                                    Click="SavePhoneNumberButton_Click"
                                    IsEnabled="False"
                                    x:Name="SavePhoneNumberButton">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="#1E90FF"
                                                CornerRadius="5"
                                                BorderBrush="#1E90FF"
                                                BorderThickness="0"
                                                Padding="5">
                                            <TextBlock Text="Сохранить"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontSize="14"
                                                       FontWeight="Bold" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Стать владельцем"
                            Width="200"
                            Height="45"
                            Margin="10"
                            Click="BecomeOwnerButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="White"
                                        CornerRadius="10"
                                        BorderBrush="#1E90FF"
                                        BorderThickness="1"
                                        Padding="5">
                                    <TextBlock Text="{TemplateBinding Content}"
                                               Foreground="#1E90FF"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="16"
                                               FontWeight="Bold" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
