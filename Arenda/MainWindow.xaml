<Window x:Class="Arenda.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход"
        Width="800"
        Height="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB">
    <Grid>
        <Border Background="#FFFFFF" CornerRadius="8" Margin="20">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="Вход"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1E90FF"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20" />

                <!-- Form -->
                <Grid Grid.Row="1" Margin="0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Login -->
                    <StackPanel Grid.Row="0" Margin="0,10,0,10">
                        <TextBlock Text="Электронная почта"
                                   FontSize="14"
                                   Foreground="#6B7280"
                                   Margin="5,0,0,5" />
                        <TextBox x:Name="LoginTextBox"
                                 FontSize="16"
                                 Padding="10"
                                 BorderThickness="1"
                                 BorderBrush="#D1D5DB"
                                 Background="#F9FAFB" />
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,10">
                        <TextBlock Text="Пароль"
                                   FontSize="14"
                                   Foreground="#6B7280"
                                   Margin="5,0,0,5" />
                        <Grid>
                            <PasswordBox x:Name="PasswordBox"
                                         FontSize="16"
                                         Padding="10"
                                         BorderThickness="1"
                                         BorderBrush="#D1D5DB"
                                         Background="#F9FAFB" 
                                         Visibility="Visible"/>
                            <TextBox x:Name="PasswordTextBox"
                                     FontSize="16"
                                     Padding="10"
                                     BorderThickness="1"
                                     BorderBrush="#D1D5DB"
                                     Background="#F9FAFB"
                                     Visibility="Collapsed" />
                            <Button Width="30"
                                    Height="30"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="TogglePasswordVisibility_Click">
                                <ContentControl Content="👁"
                                                Foreground="Black"
                                                FontSize="14"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Войти"
                            Width="200"
                            Height="45"
                            Margin="10"
                            Click="LogInButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#1E90FF"
                                        CornerRadius="10"
                                        BorderBrush="#1E90FF"
                                        BorderThickness="0"
                                        Padding="5">
                                    <TextBlock Text="{TemplateBinding Content}"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="16"
                                               FontWeight="Bold" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Регистрация"
                            Width="200"
                            Height="45"
                            Margin="10"
                            Click="RegisterButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="White"
                                        CornerRadius="10"
                                        BorderBrush="#1E90FF"
                                        BorderThickness="1"
                                        Padding="5">
                                    <TextBlock Text="{TemplateBinding Content}"
                                               Foreground="#1E90FF"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="16"
                                               FontWeight="Bold" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
